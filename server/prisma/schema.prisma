generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id          String @id @default(cuid())
  email       String @unique
  role        UserRole @default(USER)
  firstName   String
  lastName    String
  password    String
  createdAt   DateTime @default(now())
  events      Event[]
}

model Event {
  id String @id @default(cuid())
  title String
  description String
  location String
  startDate DateTime
  createdAt DateTime @default(now())
  slug String @unique
  rsvpToken String @unique @default(uuid())

  creatorId String
  creator User @relation(fields: [creatorId], references: [id])
  
  rsvps RSVP[]
}

model RSVP {
  id String @id @default(cuid())
  name String
  email String
  status RSVPStatus
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  eventId String
  event Event @relation(fields: [eventId], references: [id])

  @@unique ([eventId, email])
}

enum RSVPStatus {
  ACCEPTED
  DECLINED
  MAYBE
}

enum UserRole {
  ADMIN
  USER
}