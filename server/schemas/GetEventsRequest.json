{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/schemas/GetEventsRequest.json",
    "title": "GetEventsRequest",
    "type": "object",
    "properties": {
        "userId": {
            "type": "string",
            "description": "The ID of the user whose events are being requested. If not provided, all public events will be returned."
        },
        "limit": {
            "type": "integer",
            "minimum": -1,
            "maximum": 1000
        },
        "offset": {
            "type": "integer",
            "minimum": -1,
            "maximum": 1000
        }
    },

    "additionalProperties": false
}