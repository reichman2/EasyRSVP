{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/schemas/CreateEventRequest.json",
    "title": "CreateEventRequest",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "minLength": 3,
            "maxLength": 128
        },
        "description": {
            "type": "string",
            "minLength": 0,
            "maxLength": 4096
        },
        "startDate": {
            "type": "string",
            "foramt": "date-time"
        },
        "endDate": {
            "type": "string",
            "format": "date-time",
            "description": "The end date and time of the event. Defaults to 2 hours after the start date if not provided."
        },
        "location": {
            "type": "string",
            "minLength": 0,
            "maxLength": 256
        }
    },

    "required": ["title", "description", "startDate", "location"],
    "additionalProperties": false
}