{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/schemas/SendInvitesRequest.json",
    "title": "SendInvitesRequest",
    "type": "object",
    "properties": {
        "eventId": {
            "type": "string"
        },
        "recipients": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "required": ["eventId", "emails"]
}